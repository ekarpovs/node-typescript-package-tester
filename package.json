{
  "name": "@ekarpovs/node-typescript-package-tester",
  "version": "1.0.0",
  "description": "Starter for nodejs app",
  "main": "./build/main/index.js",
  "repository": "https://github.com/ekarpovs/node-typescript-package-tester",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "typescript",
    "starter"
  ],
  "scripts": {
    "clean": "./node_modules/.bin/rimraf ./build",
    "build": "run-s clean && npx tsc",
    "dev": "nodemon ./src/index.ts",
    "start": "ts-node ./src/index.ts",
    "lint": "run-s lint:*",
    "lint:spell": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "lint:lint": "eslint src --ext .ts",
    "lint:prettier": "prettier --check \"src/**/*.ts\"",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "jest --detectOpenHandles --coverage --verbose",
    "prepare": "husky install",
    "run": "run-s build && node ./build/main/index.js"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "cspell": "^7.2.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "singleQuote": true
  }
}
